default_platform(:ios)

platform :ios do
  desc "앱을 빌드 후 Testflight에 업로드합니다"
  lane :beta do
    get_certificates
    get_provisioning_profile
    build_app(
        configuration: "Debug"
    )
    upload_to_testflight
    # add actions here: https://docs.fastlane.tools/actions
  end
end
